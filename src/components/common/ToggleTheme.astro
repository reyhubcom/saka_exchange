---
import { Icon } from 'astro-icon/components';

import { UI } from 'astrowind:config';

export interface Props {
  label?: string;
  class?: string;
  iconClass?: string;
  iconName?: string;
}

const {
  label = '',
  class:
    className = '',
  iconClass = '',
  iconName = '',
} = Astro.props;
---

{
  !(UI.theme && UI.theme.endsWith(':')) && (
    <button type="" class={className} aria-label={label} data-aw-toggle-color-scheme>
      <Icon name={iconName} class={iconClass} />
    </button>
  )
}
